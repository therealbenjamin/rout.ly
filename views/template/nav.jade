.contain-to-grid.fixed
  nav.top-bar
    ul.title-area
      li.name
        h1: a(href="/") rout.ly
      li.toggle-topbar.menu-icon
        a(href="#")
          span Menu
    section.top-bar-section
      ul.left
        li.has-dropdown
          a(href='#') Account
          ul.dropdown
            li
              a(href='/overview') Account Overview
            li
              a(href='/newoffer') Submit Offer
            li
              a(href='/addvenue') Add a Venue
            li
              a(href='/createaccount') Create Account

      ul.right
        li: a(href='/inquiry') Submit Inquiry
        li.divider
        if user
          li.has-form: a#authentication-button.button.radius.alert(href="#", data-email=user.email) Logout
        else
          li.has-form: a#authentication-button.button.radius(href="#", data-email="anonymous") Login