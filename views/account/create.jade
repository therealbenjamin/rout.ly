extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h1.subheader rout.ly
  .row
    .small-12.columns
      form#buyer-details(action='/overview', method='post')
        fieldset
          legend New Buyer Details
          .row
            mixin field(6, 'text', 'company', null, null, 'Company Name')
            mixin field(6, 'text', 'signatory', null, null, 'Signatory Name')
          .row
            mixin field(6, 'text', 'firstName', null, null, 'Contact First Name')
            mixin field(6, 'text', 'lastName', null, null, 'Contact Last Name')
          .row
            mixin field(5, 'text', 'address', null, null, 'Buyer Address')
            mixin field(3, 'text', 'city', null, null, 'City')
            mixin field(1, 'text', 'state', null, null, 'State')
            mixin field(3, 'text', 'zip', null, null, 'Zip')
          .row
            mixin field(6, 'text', 'phone', null, null, 'Contact Phone')
            mixin field(6, 'text', 'email', null, null, 'Contact Email')
          .row
            .small-2.small-offset-10.columns: button.radius.small.expand(type='submit') Save

