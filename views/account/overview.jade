extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h1.subheader rout.ly
  .row
    .small-2.columns
      a.button.tiny.expand(href="/") Home
    .small-2.columns
      a.button.tiny.expand(href="/newoffer") New Offer
    .small-10.columns
  .row
    .small-6.columns
      #confirmedOffers
        h3 Confirmed Offers
        if offers
          each offer in offers
            if(offer.isConfirmed === true)
              p= offer.artist
              p= offer.showDate
    .small-6.columns
  .row
    .small-12.columns
      #pendingOffers
        h3 Pending Offers
        if offers
          each offer in offers
            if(offer.isConfirmed === false)
              p= offer.artist
              p= offer.showDate
      #venues
        if venues
          h3 Your Venues
          each venue in venues
            p= venue.name
      #map-canvas